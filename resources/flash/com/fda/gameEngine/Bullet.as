package com.fda.gameEngine{	import flash.display.MovieClip	import flash.events.Event		public class Bullet extends MovieClip	{		private var _explosion:Explosion;				public function Bullet()		{					}				public function fireBullet():void		{			addEventListener(Event.ENTER_FRAME,update);		}				public function update(event:Event):void		{			this.x += 15;			if (this.hitTestObject(MovieClip(parent).enemy1))			{				addExplosion(MovieClip(parent).enemy1);				removeBullet();				return;			}			else if (this.hitTestObject(MovieClip(parent).enemy2))			{				addExplosion(MovieClip(parent).enemy2);				removeBullet();				return;			}			else if (this.hitTestObject(MovieClip(parent).enemy3))			{				addExplosion(MovieClip(parent).enemy3);				removeBullet();				return;			}			else if(this.x > stage.stageWidth)			{				removeBullet();				return;			}		}				public function removeBullet():void		{			removeEventListener(Event.ENTER_FRAME,update);						if(this.parent)			{				this.parent.removeChild(this);			}		}				public function addExplosion(mc:MovieClip):void		{			_explosion = new Explosion();			_explosion.x = mc.x;			_explosion.y = mc.y;			stage.addChild(_explosion);			mc.resetEnemy();		}	}}